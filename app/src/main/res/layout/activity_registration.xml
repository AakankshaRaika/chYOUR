<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/blue"
    tools:context="com.example.brian.chyourgui.registration">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/fName"
        android:layout_alignEnd="@+id/fName">

        <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@drawable/logo"
            android:id="@+id/imageView4"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="0"
            android:layout_height="wrap_content"
            android:adjustViewBounds="false"
            android:cropToPadding="true" />

        <TextView
            android:text="first name"
            android:layout_width="match_parent"
            android:id="@+id/textView3"
            android:textStyle="normal|bold"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:layout_below="@+id/imageView4"
            android:layout_alignLeft="@+id/bGoBack"
            android:layout_alignStart="@+id/bGoBack"
            android:fontFamily="serif" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/fName"
            android:background="#99ffffff"
            android:hint="enter first name"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:fontFamily="serif"
            android:layout_below="@+id/textView3"
            android:layout_alignLeft="@+id/lName"
            android:layout_alignStart="@+id/lName"
            android:layout_marginTop="15dp"
            android:textSize="16sp" />

        <TextView
            android:text="last name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:layout_below="@+id/fName"
            android:layout_marginTop="13dp"
            android:fontFamily="serif" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/lName"
            android:hint="enter last name"
            android:textStyle="normal|bold"
            android:background="#99ffffff"
            android:textAlignment="center"
            android:fontFamily="serif"
            android:layout_below="@+id/textView4"
            android:layout_alignLeft="@+id/emailVar"
            android:layout_alignStart="@+id/emailVar"
            android:layout_marginTop="13dp"
            android:textSize="16sp" />

        <TextView
            android:text="email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_below="@+id/lName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:fontFamily="serif" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/emailVar"
            android:hint="enter email address"
            android:textStyle="normal|bold"
            android:background="#99ffffff"
            android:textAlignment="center"
            android:fontFamily="serif"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/passwordVar"
            android:layout_alignStart="@+id/passwordVar"
            android:textSize="16sp" />

        <TextView
            android:text="password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textSize="15sp"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textStyle="normal|bold"
            android:layout_below="@+id/emailVar"
            android:layout_alignRight="@+id/textView3"
            android:layout_alignEnd="@+id/textView3"
            android:layout_marginTop="11dp"
            android:fontFamily="serif" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordVar"
            android:hint="enter password"
            android:background="#99ffffff"
            android:textAlignment="center"
            android:fontFamily="serif"
            android:textStyle="normal|bold"
            android:layout_below="@+id/textView8"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:textSize="16sp" />

        <TextView
            android:text="confirm password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="normal|bold"
            android:textColor="#ffffff"
            android:layout_below="@+id/passwordVar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:fontFamily="serif" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/confirmPasswordVar"
            android:hint="re-enter password"
            android:textStyle="normal|bold"
            android:background="#99ffffff"
            android:textAlignment="center"
            android:fontFamily="serif"
            android:layout_below="@+id/textView9"
            android:layout_alignLeft="@+id/passwordVar"
            android:layout_alignStart="@+id/passwordVar"
            android:layout_marginTop="11dp"
            android:textSize="16sp" />

        <Button
            android:text="sign up"
            android:layout_width="match_parent"
            android:id="@+id/bSignUp"
            android:layout_below="@+id/confirmPasswordVar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_height="40dp" />

        <Button
            android:text="go back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bGoBack"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="#ffffff" />

    </LinearLayout>

</RelativeLayout>
