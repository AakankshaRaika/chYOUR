<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_tasks"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/blue"
    tools:context="com.example.brian.chyourgui.addTasks">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo"
            android:id="@+id/imageView3" />

        <TextView
            android:text="ADD TASK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="@android:color/black" />

        <TextView
            android:text="Task Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal|bold"
            android:textSize="20sp"
            android:textColor="@android:color/black" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:background="#99aeaaaa"
            android:ems="10"
            android:id="@+id/titleVar"
            android:hint="enter task title here"
            android:textStyle="normal|bold" />

        <TextView
            android:text="Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:textStyle="normal|bold"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/descriptionVar"
            android:background="#99aeaaaa"
            android:hint="describe what you need"
            android:textStyle="normal|bold"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:text="Range"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:textSize="20sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/black" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:background="#99aeaaaa"
            android:ems="10"
            android:id="@+id/rangeVar"
            android:hint="how many miles are you willing to travel"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:text="Complete by this time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="normal|bold" />


        <TextView
            android:text="Month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textStyle="normal|bold"
            android:textColor="@android:color/black" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#99aeaaaa"
            android:entries="@array/month_array"
            android:prompt="@string/month_prompt"
            android:id="@+id/month" />
            android:id="@+id/spinner"
            android:entries="Month" />

        <TextView
            android:text="Day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView16"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold" />

        <Spinner
            android:layout_width="match_parent"
            android:background="#99aeaaaa"
            android:layout_height="wrap_content"
            android:entries="@array/day_array"
            android:prompt="@string/day_prompt"
            android:id="@+id/day" />
            android:id="@+id/spinner2"
            android:entries="Day" />

        <TextView
            android:text="Hour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView18"
            android:textStyle="normal|bold"
            android:textColor="@android:color/black" />

        <Spinner
            android:layout_width="match_parent"
            android:background="#99aeaaaa"
            android:layout_height="wrap_content"
            android:entries="@array/hour_array"
            android:prompt="@string/hour_prompt"
            android:id="@+id/hour" />
            android:id="@+id/spinner3"
            android:entries="Hour" />

        <TextView
            android:text="Minute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView19"
            android:textStyle="normal|bold"
            android:textColor="@android:color/black" />

        <Spinner
            android:layout_width="match_parent"
            android:background="#99aeaaaa"
            android:layout_height="wrap_content"
            android:entries="@array/minute_array"
            android:prompt="@string/minute_prompt"
            android:id="@+id/minute" /><![CDATA[
            android:id="@+id/spinner4"
            android:entries="Minute" />

        ]]>

        <TextView
            android:text="am/pm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView20"
            android:textStyle="normal|bold"
            android:textColor="@android:color/black" />

        <Spinner
            android:layout_width="match_parent"
            android:background="#99aeaaaa"
            android:layout_height="wrap_content"
            android:entries="@array/ampm_array"
            android:prompt="@string/ampm_prompt"
            android:id="@+id/ampm" />
            android:id="@+id/spinner5"
            android:entries="ampm" />

        <Button
            android:text=" Add to Tasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bAdd" />

    </LinearLayout>

</RelativeLayout>
