<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_registration"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/blue"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin" android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="chyourgui.registration">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_alignParentTop="true" android:orientation="vertical">

        <ImageView android:id="@+id/imageView4" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" android:layout_weight="0"
            android:adjustViewBounds="false" android:cropToPadding="true"
            app:srcCompat="@drawable/logo" />

        <TextView android:id="@+id/textView3" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignLeft="@+id/bGoBack" android:layout_alignStart="@+id/bGoBack"
            android:layout_below="@+id/imageView4" android:fontFamily="serif"
            android:text="first name" android:textAlignment="center"
            android:textColor="#ffffff" android:textSize="15sp"
            android:textStyle="normal|bold" />

        <EditText android:id="@+id/fName" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignLeft="@+id/lName" android:layout_alignStart="@+id/lName"
            android:layout_below="@+id/textView3" android:layout_marginTop="15dp"
            android:background="#99ffffff" android:ems="10"
            android:fontFamily="serif" android:hint="enter first name"
            android:inputType="textPersonName" android:textAlignment="center"
            android:textSize="16sp" android:textStyle="normal|bold" />

        <TextView android:id="@+id/textView4" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_below="@+id/fName"
            android:layout_marginTop="13dp" android:fontFamily="serif" android:text="last name"
            android:textAlignment="center" android:textColor="#ffffff"
            android:textSize="15sp" android:textStyle="normal|bold" />

        <EditText android:id="@+id/lName" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignLeft="@+id/emailVar" android:layout_alignStart="@+id/emailVar"
            android:layout_below="@+id/textView4" android:layout_marginTop="13dp"
            android:background="#99ffffff" android:ems="10" android:fontFamily="serif"
            android:hint="enter last name" android:inputType="textPersonName"
            android:textAlignment="center" android:textSize="16sp"
            android:textStyle="normal|bold" />

        <TextView android:id="@+id/textView7" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_below="@+id/lName"
            android:layout_centerHorizontal="true" android:layout_marginTop="13dp"
            android:fontFamily="serif" android:text="email" android:textAlignment="center"
            android:textColor="#ffffff" android:textSize="15sp"
            android:textStyle="normal|bold" />

        <EditText android:id="@+id/emailVar" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignLeft="@+id/passwordVar" android:layout_alignStart="@+id/passwordVar"
            android:layout_centerVertical="true" android:background="#99ffffff"
            android:ems="10" android:fontFamily="serif" android:hint="enter email address"
            android:inputType="textPersonName" android:textAlignment="center"
            android:textSize="16sp" android:textStyle="normal|bold" />

        <TextView android:id="@+id/textView8" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignEnd="@+id/textView3" android:layout_alignRight="@+id/textView3"
            android:layout_below="@+id/emailVar" android:layout_marginTop="11dp"
            android:fontFamily="serif" android:text="password"
            android:textAlignment="center" android:textColor="#ffffff"
            android:textSize="15sp" android:textStyle="normal|bold" />

        <EditText android:id="@+id/passwordVar" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_below="@+id/textView8" android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp" android:background="#99ffffff"
            android:ems="10" android:fontFamily="serif"
            android:hint="enter password" android:inputType="textPassword"
            android:textAlignment="center" android:textSize="16sp"
            android:textStyle="normal|bold" />

        <TextView android:id="@+id/textView9" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_below="@+id/passwordVar"
            android:layout_centerHorizontal="true" android:layout_marginTop="11dp" android:fontFamily="serif"
            android:text="confirm password" android:textAlignment="center"
            android:textColor="#ffffff" android:textSize="15sp"
            android:textStyle="normal|bold" />

        <EditText android:id="@+id/confirmPasswordVar" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignLeft="@+id/passwordVar" android:layout_alignStart="@+id/passwordVar"
            android:layout_below="@+id/textView9" android:layout_marginTop="11dp"
            android:background="#99ffffff" android:ems="10" android:fontFamily="serif"
            android:hint="re-enter password" android:inputType="textPassword"
            android:textAlignment="center" android:textSize="16sp"
            android:textStyle="normal|bold" />

        <Button android:id="@+id/bSignUp" android:layout_width="match_parent" android:layout_height="40dp"
            android:layout_below="@+id/confirmPasswordVar" android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp" android:text="sign up" />

        <Button android:id="@+id/bGoBack" style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="go back" android:textAlignment="center"
            android:textColor="#ffffff" android:textStyle="normal|bold" />

    </LinearLayout>

</RelativeLayout>