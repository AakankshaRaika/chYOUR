<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_account_deletion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.chyour.accountDeletion">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo"
            android:id="@+id/imageView7" />

        <TextView
            android:text="We're Sad to See You Go!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView39"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView61" />

        <TextView
            android:text="Are you sure you want to delete your account? Chyour is the most comprehensive application for task management and organization.  All Tasks will be deleted and you will be removed from our database."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView54"
            android:textSize="14sp"
            android:textColor="@android:color/black" />

        <TextView
            android:text="You can still go back!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView60"
            android:textStyle="normal|bold"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:textSize="16sp" />

        <Button
            android:text="go back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:id="@+id/bGoBack6"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView63"
            android:textStyle="normal|bold"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_marginBottom="-20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/deleteVar1"
            android:background="#99ffffff"
            android:hint="enter email here"
            android:layout_marginTop="25dp"
            android:layout_alignTop="@+id/textView63"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="16sp"
            android:fontFamily="serif"
            android:textStyle="normal|bold" />

        <TextView
            android:text="Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deleteVar1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="13dp"
            android:id="@+id/textView68"
            android:textStyle="normal|bold"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_below="@+id/textView68"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#99ffffff"
            android:id="@+id/deleteVar2"
            android:textSize="16sp"
            android:hint="enter password here"
            android:fontFamily="serif"
            android:textStyle="normal|bold" />

        <TextView
            android:text="Confirm Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:id="@+id/textView71"
            android:textStyle="normal|bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_below="@+id/deleteVar2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_below="@+id/textView71"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/deleteVar3"
            android:hint="confirm password here"
            android:background="#99ffffff"
            android:textSize="16sp" />

        <Button
            android:text="delete account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/bDelete" />

    </LinearLayout>

</RelativeLayout>
